
IF (WIN32)
	SET(PLATFORM_WIN 1)
	SET(PLATFORM_NAME Win)
ELSEIF (IOS_PLATFORM)
	SET(PLATFORM_IOS 1)
	SET(PLATFORM_NAME Ios)
ELSEIF (APPLE)
	SET(PLATFORM_OSX 1)
	SET(PLATFORM_NAME Osx)
ELSEIF (ANDROID_NDK)
	SET(PLATFORM_ANDROID 1)
	SET(PLATFORM_NAME Android)
ELSE()
	SET(PLATFORM_LINUX 1)
	SET(PLATFORM_NAME Linux)
ENDIF()

IF("${CMAKE_SYSTEM_PROCESSOR}" STREQUAL "armv7l" OR ("${CMAKE_SYSTEM_PROCESSOR}" STREQUAL "aarch64"))
  SET(PLATFORM_ARCH "${CMAKE_SYSTEM_PROCESSOR}" CACHE STRING "CPU Architecture" )
ELSEIF(CMAKE_SIZEOF_VOID_P EQUAL 8)
  SET(PLATFORM_ARCH "amd64" CACHE STRING "CPU Architecture")
  SET(PLATFORM_AMD64 ${PLATFORM_ARCH})
ELSE()
  SET(PLATFORM_ARCH "x86" CACHE STRING "CPU Architecture")
  SET(PLATFORM_X86 ${PLATFORM_ARCH})
ENDIF()
